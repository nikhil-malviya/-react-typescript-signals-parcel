{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2016",
    "lib": ["ESNext", "DOM"],

    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",

    "sourceMap": true,

    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,

    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
